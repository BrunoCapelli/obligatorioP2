@using LogicaDeNegocio
<div class="d-flex align-items-center justify-content-center" style="margin-top: 5%;">
    <div style="padding:20px; background-color:#D3D3D3;border-radius:5px">
        <h2 class="text-center">Login</h2>

        <form method="post">
            <div class="form-group">
                <label for="user">Usuario</label>
                <input type="text" class="form-control" name="user" />
            </div>

            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" class="form-control" name="password" />
            </div>
            <br />
            <button type="submit" class="btn btn-primary" value="Ingresar">Iniciar sesión</button>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.DatosErroneos)) {
            <p class="text-danger">@ViewBag.DatosErroneos</p>
        }
    </div>
</div>


@if (AdminHostel.GetInstancia.BuscarPorEmail(Context.Session.GetString("email")) == null)
{
    <script>

        document.querySelector("#navbar").insertAdjacentHTML('beforeend', ` <li class="nav-item"> <a class="nav-link text-dark" href="Login/SignUp">Registrarse</a> </li>`);

    </script>
}